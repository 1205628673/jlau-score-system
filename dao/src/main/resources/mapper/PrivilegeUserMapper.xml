<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jlau.scoresystem.dao.PrivilegeUserMapper">
    <resultMap id="privilegeUser" type="PrivilegeUser">
        <id property="userId" column="student_id" />
        <result property="name" column="name" />
        <result property="password" column="com_key" />
        <result property="createTime" column="create_time" />
        <result property="locked" column="locked" />
        <result property="enable" column="enable" />
        <collection property="roles" ofType="Role">
            <id property="id" column="id" />
            <result property="name" column="role_name" />
            <result property="zhName" column="zh_name" />
        </collection>
    </resultMap>
    
    <sql id="privilegeUserInfo">
        student_id,name,com_key,create_time,locked,enable
    </sql>
    <select id="findPrivilegeUserById" parameterType="int" resultMap="privilegeUser">
        SELECT
            c.student_id,
            c.name,
            c.com_key,
            c.create_time,
            c.locked,
            c.enable,
            r.id,
            r.name role_name,
            r.zh_name
        FROM community c
        JOIN user_role ur ON c.student_id=ur.uid
        JOIN role r ON ur.rid=r.id
        <where>
            <if test="studentId != null and student != '' ">
                c.student_id = #{userId}
            </if>
        </where>
    </select>
    <select id="findAllPrivilegeUser" resultMap="privilegeUser">
        SELECT
        c.student_id,
        c.name,
        c.com_key,
        c.create_time,
        c.locked,
        c.enable,
        r.id,
        r.name role_name,
        r.zh_name
        FROM community c
        JOIN user_role ur ON c.student_id=ur.uid
        JOIN role r ON ur.rid=r.id
    </select>
    <insert id="addPrivilegeUser" parameterType="privilegeUser">
        INSERT INTO community(
            student_id,
            name,
            com_key,
            create_time,
            locked,enable
        )
        VALUE(
            #{userId},
            #{name},
            #{password},
            #{createTime},
            #{locked},
            #{enable}
        )
    </insert>
    <insert id="addUserRole" useGeneratedKeys="true">
        INSERT INTO user_role(
            uid,
            rid
        )
        VALUE(
            #{userId},
            #{roleId}
        )
    </insert>
    <update id="savePrivilegeUser" parameterType="PrivilegeUser">
        UPDATE community
        <set>
            <if test="name != null and name != '' ">
                name = #{name},
            </if>
            <if test="password != null and password != '' ">
                com_key = #{password},
            </if>
            <if test="locked != null and locked != '' ">
                locked = #{locked},
            </if>
            <if test="enable != null and enable != '' ">
                enable = #{enable},
            </if>
        </set>
        <where>
            <if test="userId != null and userId != '' ">
                student_id = #{userId}
            </if>
        </where>
    </update>
    <delete id="deletePrivilegeUserById" parameterType="int">
        DELETE FROM community
        <where>
            <if test="userId != null and userId != '' ">
                student_id = #{userId}
            </if>
        </where>
    </delete>
    <delete id="deleteAllUserRoleByUserId">
        DELETE FROM user_role
        <where>
            uid = #{userId}
        </where>
    </delete>
    <delete id="deleteUserRoleById">
        DELETE FROM user_role
        <where>
            id = #{id}
        </where>
    </delete>
</mapper>